ARG AUTOR
FROM ${AUTOR}/ubuntubase

ARG AUTOR
ENV USUARIO="pepe"
ENV PASSWORD="abc"
ARG TZ
ARG CONTEXT
ARG PROYECTO
USER root
RUN apt update && apt install -yq --no-install-recommends \
    nginx

COPY ./proyectos/${PROYECTO}/deploy/default.conf /etc/nginx/conf.d/default.conf
COPY ./proyectos/${PROYECTO}/deploy/html /var/www/html
RUN chmod -R 755 /var/www/html
RUN mkdir -p /var/log/nginx
EXPOSE 80

RUN mkdir /root/admin/nginx
COPY ./dockerfiles/sweb/nginx/start.sh /root/admin/nginx
RUN chmod +x /root/admin/nginx/start.sh

WORKDIR /root/admin
ENTRYPOINT ["/root/admin/nginx/start.sh"]